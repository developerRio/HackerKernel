<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/main_bg_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/main_bg" />

    <RelativeLayout
        android:id="@+id/logo_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/company_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:elevation="2dp"
            app:srcCompat="@drawable/new_compony_logo" />

        <TextView
            android:id="@+id/company_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/company_logo"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/nunito_semibold"
            android:text="Company"
            android:textColor="#1D1D1D"
            android:textSize="35sp" />

        <TextView
            android:id="@+id/model_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/company_tittle"
            android:layout_marginStart="18dp"
            android:fontFamily="@font/nunito_semibold"
            android:text="Model"
            android:textSize="25sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/login_container"
        android:layout_width="match_parent"
        android:paddingBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/email_editText"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:background="@drawable/capsule_bg"
            android:drawableStart="@drawable/ic_mail_black_24dp"
            android:drawablePadding="10dp"
            android:ems="10"
            android:fontFamily="@font/nunito_semibold"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:paddingStart="25dp"
            android:paddingEnd="1dp"
            android:textColor="#333333"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/password_editText"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/email_editText"
            android:layout_marginStart="35dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="35dp"
            android:background="@drawable/capsule_bg"
            android:drawableStart="@drawable/ic_lock_black_24dp"
            android:drawablePadding="10dp"
            android:ems="10"
            android:fontFamily="@font/nunito_semibold"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingStart="25dp"
            android:paddingEnd="1dp"
            android:textColor="#333333"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button_login"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/password_editText"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="35dp"
            android:background="@drawable/capsule_bg"
            android:backgroundTint="@color/colorAccent"
            android:fontFamily="@font/nunito_semibold"
            android:text="Login"
            android:textColor="#FFF"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/forgot_password_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/nunito_semibold"
            android:text="Forgot Password"
            android:textColor="#FFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/register_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/forgot_password_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nunito_semibold"
            android:shadowColor="#FFFFFF"
            android:shadowDx="5"
            android:padding="10dp"
            android:shadowDy="5"
            android:shadowRadius="15"
            android:text="REGISTER"
            android:textColor="#FFA101"
            android:textSize="18sp"
            android:textStyle="bold" />


    </RelativeLayout>


</RelativeLayout>